<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="FilterImageColor.Filtersnew">


    <ImageView

        android:id="@+id/imageViewFilter"
        android:layout_width="341dp"
        android:layout_height="290dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/buttonImage_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewFilter"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:onClick="upload"
        android:text="upload" />

    <Button
        android:id="@+id/button_paris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewFilter"

        android:layout_marginStart="10dp"
        android:layout_marginLeft="-68dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="paris"
        android:text="PARIS" />

    <Button
        android:id="@+id/button_dubai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/imageViewFilter"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/button_paris"
        android:layout_weight="1"
        android:onClick="dubai"
        android:text="dubai" />

</RelativeLayout>